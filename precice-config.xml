<?xml version="1.0"?>

<precice-configuration>
  <!-- format for console output of precice -->
  <log>
    <sink type="stream" output="stdout"  filter='(%Severity% >= debug) and (not (%Function% = "advance"))' format="\033[0;33m%Rank% [precice]\033[0m %ColorizedSeverity%\033[0;33m%Message%\033[0m" enabled="true" />
  </log>

    <data:vector name="Velocity"/>
    <data:vector name="Displacement"/>
    <data:vector name="Traction"/>

    <mesh name="Tendon-Mesh-Left" dimensions="3">
       <use-data name="Displacement"/>
       <use-data name="Velocity"/>
       <use-data name="Traction"/>
    </mesh>
    
    <mesh name="Tendon-Mesh-Right" dimensions="3">
       <use-data name="Displacement"/>
       <use-data name="Velocity"/>
       <use-data name="Traction"/>
    </mesh>

    <mesh name="Left-Muscle-Mesh" dimensions="3">
       <use-data name="Displacement"/>
       <use-data name="Velocity"/>
       <use-data name="Traction"/>
    </mesh>

    <mesh name="Right-Muscle-Mesh" dimensions="3">
       <use-data name="Displacement"/>
       <use-data name="Velocity"/>
       <use-data name="Traction"/>
    </mesh>

    <participant name="Tendon"> 
      <provide-mesh name="Tendon-Mesh-Left" />
      <provide-mesh name="Tendon-Mesh-Right" />
      <receive-mesh name="Left-Muscle-Mesh" from="Left-Muscle"/>
      <receive-mesh name="Right-Muscle-Mesh" from="Right-Muscle"/>

      <read-data name="Displacement"  mesh="Tendon-Mesh-Right"/>
      <read-data name="Velocity"  mesh="Tendon-Mesh-Right"/>
      <write-data  name="Traction"      mesh="Tendon-Mesh-Right"/>

      <write-data name="Displacement"  mesh="Tendon-Mesh-Left"/>
      <write-data name="Velocity"  mesh="Tendon-Mesh-Left"/>
      <read-data  name="Traction"      mesh="Tendon-Mesh-Left"/>

      <mapping:nearest-neighbor direction="read" from="Left-Muscle-Mesh" to="Tendon-Mesh-Left" constraint="consistent"/>
      <mapping:nearest-neighbor direction="read" from="Right-Muscle-Mesh" to="Tendon-Mesh-Right" constraint="consistent"/>

      <export:vtk directory="preCICE-output" />
    </participant>

    <participant name="Left-Muscle">
      <provide-mesh name="Left-Muscle-Mesh"  />
      <receive-mesh name="Tendon-Mesh-Left"     from="Tendon"/>

      <read-data  name="Displacement"  mesh="Left-Muscle-Mesh"/>
      <read-data  name="Velocity"  mesh="Left-Muscle-Mesh"/>
      <write-data name="Traction"      mesh="Left-Muscle-Mesh"/>

      <mapping:nearest-neighbor direction="read" from="Tendon-Mesh-Left" to="Left-Muscle-Mesh" constraint="consistent"/>
      <export:vtk directory="preCICE-output"/>
    </participant>
    
    <participant name="Right-Muscle">
      <provide-mesh name="Right-Muscle-Mesh"  />
      <receive-mesh name="Tendon-Mesh-Right"     from="Tendon"/>

      <write-data  name="Displacement"  mesh="Right-Muscle-Mesh"/>
      <write-data  name="Velocity"  mesh="Right-Muscle-Mesh"/>
      <read-data name="Traction"      mesh="Right-Muscle-Mesh"/>
      
      <mapping:nearest-neighbor direction="read" from="Tendon-Mesh-Right" to="Right-Muscle-Mesh" constraint="consistent"/>
      <export:vtk directory="preCICE-output"/>
    </participant>

    <!-- Communication method, use TCP sockets, Change network to "ib0" on SuperMUC -->
    <m2n:sockets acceptor="Tendon" connector="Left-Muscle" network="lo" />
    <m2n:sockets acceptor="Tendon" connector="Right-Muscle" network="lo" />

    <coupling-scheme:multi>
      <participant name="Tendon" control="yes"/>
      <participant name="Left-Muscle" />
      <participant name="Right-Muscle" />

      <max-time value="20.0"/>           
      <time-window-size value="0.1"/>   
      <max-iterations value="25" />

      <acceleration:IQN-ILS>
        <data name="Displacement" mesh="Tendon-Mesh-Left"/>
        <data name="Displacement" mesh="Right-Muscle-Mesh"/>
        <data name="Velocity" mesh="Tendon-Mesh-Left"/>
        <data name="Velocity" mesh="Right-Muscle-Mesh"/>
        <data name="Traction" mesh="Left-Muscle-Mesh"/>
        <data name="Traction" mesh="Tendon-Mesh-Right"/>
        <max-used-iterations value="50"/>
        <time-windows-reused value="100"/>
      </acceleration:IQN-ILS>


      <relative-convergence-measure limit="1e-2" data="Displacement" mesh="Tendon-Mesh-Left" strict="0"/>
      <relative-convergence-measure limit="1e-2" data="Velocity" mesh="Tendon-Mesh-Left" strict="0"/>
      <absolute-convergence-measure limit="1e-1" data="Traction" mesh="Left-Muscle-Mesh" strict="0"/>

      <relative-convergence-measure limit="1e-2" data="Displacement" mesh="Right-Muscle-Mesh" strict="0"/>
      <relative-convergence-measure limit="1e-2" data="Velocity" mesh="Right-Muscle-Mesh" strict="0"/>
      <absolute-convergence-measure limit="1e-1" data="Traction" mesh="Tendon-Mesh-Right" strict="0"/>

      <exchange data="Displacement" mesh="Tendon-Mesh-Left" from="Tendon" to="Left-Muscle"/>  
      <exchange data="Velocity" mesh="Tendon-Mesh-Left" from="Tendon" to="Left-Muscle"/>  
      <exchange data="Traction" mesh="Left-Muscle-Mesh" from="Left-Muscle" to="Tendon"/>  

      <exchange data="Displacement" mesh="Right-Muscle-Mesh" from="Right-Muscle" to="Tendon"/>  
      <exchange data="Velocity" mesh="Right-Muscle-Mesh" from="Right-Muscle" to="Tendon"/>  
      <exchange data="Traction" mesh="Tendon-Mesh-Right" from="Tendon" to="Right-Muscle"/> 
    </coupling-scheme:multi>

</precice-configuration>
